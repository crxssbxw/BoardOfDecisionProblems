<Window x:Class="ProblemsBoard.Windows.AdminAuthorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProblemsBoard.Windows"
        mc:Ignorable="d" FontSize="14" ResizeMode="NoResize"
        Title="Авторизация" Height="250" Width="250">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center">
            <Label Content="Логин"/>
            <TextBox x:Name="LoginTB"/>
            <Label Content="Пароль"/>
            <PasswordBox x:Name="PasswordPB"/>

            <DockPanel HorizontalAlignment="Center" Margin="10">
                <Button x:Name="AcceptBT" IsDefault="True" Content="Далее" Padding="10 2" Margin="5 0"
                        Click="AcceptBT_Click"/>
                <Button x:Name="CancelBT" IsCancel="True" Content="Отмена" Padding="10 2" Margin="5 0"
                        Click="CancelBT_Click"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
